{
  "description": "Pipeline for parsing modsecurity audit logs",
  "processors": [
    {
      "set": {
        "field": "event.ingested",
        "value": "{{ _ingest.timestamp }}"
      }
    },
    {
      "json": {
        "field": "transaction",
        "add_to_root": true
      }
    },
    {
      "user_agent": {
        "field": "modsecurity.audit.transaction.request.headers.User-Agent"
      }
    },
    {
      "date": {
        "field": "modsecurity.audit.transaction.time",
        "target_field": "@timestamp",
        "formats": [
          "dd/LLL/yyyy:HH:mm:ss -ZZZZZ"
        ]
      }
    },
    {
      "geoip": {
        "field": "modsecurity.audit.transaction.remote_address"
      }
    }
  ],
  "on_failure": [
    {
      "set": {
        "field": "error.message",
        "value": "{{ _ingest.on_failure_message }}"
      }
    }
  ]
}